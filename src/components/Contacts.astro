---
import { siteConfig } from "../config";
---

<section id="contacts" class="p-8 sm:p-12 md:p-16 lg:p-24">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4">
        <h2
          class="text-3xl sm:text-4xl md:text-5xl xl:text-6xl font-bold whitespace-nowrap"
          style="color: var(--color-text-primary)"
        >
          Contact Me
        </h2>
        <div
          class="w-[75px] h-[5px] mt-2 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        >
        </div>
      </div>

      <div class="lg:col-span-8 space-y-8">
        <p class="text-lg sm:text-xl md:text-2xl leading-relaxed" style="color: var(--color-text-secondary)">
          Feel free to reach out to me through any of the following channels:
        </p>

        <div class="pt-4 space-y-4">
          <div class="flex items-center space-x-4">
            <span class="text-lg font-medium" style="color: var(--color-text-primary)">Email:</span>
            <a
              href={`mailto:${siteConfig.social.email}`}
              class="text-lg hover:underline transition-colors duration-200"
              style="color: var(--color-accent)"
            >
              {siteConfig.social.email}
            </a>
          </div>
          <div class="flex items-center space-x-4">
            <span class="text-lg font-medium" style="color: var(--color-text-primary)">LinkedIn:</span>
            <a
              href={siteConfig.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="text-lg hover:underline transition-colors duration-200"
              style="color: var(--color-accent)"
            >
              linkedin.com/in/al-khadeem-abubakar
            </a>
          </div>
          <div class="flex items-center space-x-4">
            <span class="text-lg font-medium" style="color: var(--color-text-primary)">GitHub:</span>
            <a
              href={siteConfig.social.github}
              target="_blank"
              rel="noopener noreferrer"
              class="text-lg hover:underline transition-colors duration-200"
              style="color: var(--color-accent)"
            >
              github.com/khnnyy
            </a>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="pt-8">
          <h3 class="text-xl font-semibold mb-4" style="color: var(--color-text-primary)">Send me a message</h3>
          <form action="https://formspree.io/f/xyzoaada" method="POST" class="space-y-4">
            <div>
              <label for="name" class="block text-sm font-medium" style="color: var(--color-text-primary)">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                style="background-color: var(--color-card); color: var(--color-text-primary); border-color: var(--color-border)"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium" style="color: var(--color-text-primary)">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                style="background-color: var(--color-card); color: var(--color-text-primary); border-color: var(--color-border)"
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-medium" style="color: var(--color-text-primary)">Message</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                style="background-color: var(--color-card); color: var(--color-text-primary); border-color: var(--color-border)"
              ></textarea>
            </div>
            <button
              type="submit"
              class="inline-flex items-center justify-center px-4 sm:px-6 py-3 border border-transparent text-sm sm:text-base font-medium rounded-md transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-orange-500/50"
              style="background-color: var(--color-text-primary); color: var(--color-background)"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>